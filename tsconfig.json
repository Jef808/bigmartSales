{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "noEmit": true,
    "types": [
      "vite/client",
      "vite-plugin-vue-component-preview/client"
    ],
    "baseUrl": "./src/",
    "rootDir": "./src/"
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
